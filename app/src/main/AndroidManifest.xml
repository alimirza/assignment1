<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ali.assignment1" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SingleModeActivity"
            android:label="@string/title_activity_single_mode"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.ali.assignment1.MainActivity" />
        </activity>
        <activity
            android:name=".PlayerSelectionActivity"
            android:label="@string/title_activity_player_selection"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.ali.assignment1.MainActivity" />
        </activity>
        <activity
            android:name=".GameshowModeActivity"
            android:label="@string/title_activity_gameshow_mode"
            android:parentActivityName=".PlayerSelectionActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.ali.assignment1.PlayerSelectionActivity" />
        </activity>
    </application>

</manifest>
